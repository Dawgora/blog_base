<h1 class="center">Blog</h1>
<section >
   <%= for post <- @posts do %>
     <article>
        <div>
          <h2><%= link post.title, to: Routes.page_path(@conn, :show, post) %></h2>
          <%= if post.context do %>
            <p><%= post.inserted_at |> NaiveDateTime.to_string %> <br> <%= post.context %></p>
          <% end %>
        </div>
        <hr>
    </article>

        <% end %>

</section>
